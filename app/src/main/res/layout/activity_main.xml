<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="469dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/e_personal_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bem_vindo"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_container"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="@string/info"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/objetivo"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/objetivoSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecione um grupo muscular"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_spinner"
                android:textSize="16sp"
                android:padding="10dp"
                android:theme="@style/SpinnerPersonalizado"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grupamentoPrincipal"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/grupamentoSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecione um grupo muscular"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_spinner"
                android:textSize="16sp"
                android:padding="10dp"
                android:theme="@style/SpinnerPersonalizado"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grupamentoSecundario"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/grupamentoSpinnerDois"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Selecione um grupo muscular"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_spinner"
                android:textSize="16sp"
                android:padding="10dp"
                android:theme="@style/SpinnerPersonalizado"/>






            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGerar"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/btn_gerar"
                android:textColor="@color/white"
                android:background="@drawable/card_1"
                android:textStyle="bold"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:indeterminateTint="@color/white"
            android:visibility="invisible"
            tools:visibility="visible"
            />

    <LinearLayout
        android:id="@+id/layoutTreinoGerado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_container"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/treino"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/grupamento_um"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTreinoGerado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/light_gray"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/grupamento_dois"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTreinoGeradoDois"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/light_gray"
            android:textSize="16sp"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>


